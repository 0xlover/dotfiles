{
	// font
	"workbench.colorTheme": "Aura Dark",
	"editor.fontFamily": "CommitMono",
	"editor.fontWeight": "bold",
	"editor.fontSize": 14,
	"editor.fontLigatures": false,
	"editor.lineNumbers": "on",
	"editor.minimap.enabled": false,
	"editor.renderLineHighlight": "none",
	"editor.guides.indentation": true,
	"window.menuBarVisibility": "visible",
	"window.closeWhenEmpty": true,
	"workbench.activityBar.location": "hidden",
	"workbench.enableExperiments": false,
	"editor.glyphMargin": false,
	"chat.commandCenter.enabled": false,
	// markdown
	"editor.tokenColorCustomizations": {
		"textMateRules": [
			// Headers
			{
				"scope": "heading.1.markdown entity.name.section.markdown", // H1 text
				"settings": {
					"foreground": "#A277FF",
					"fontStyle": "bold"
				}
			},
			{
				"scope": "heading.1.markdown punctuation.definition.heading.markdown", // H1 delimiter (###)
				"settings": {
					"foreground": "#A277FF"
				}
			},
			{
				"scope": "heading.2.markdown entity.name.section.markdown", // H2 text
				"settings": {
					"foreground": "#61FFCA",
					"fontStyle": "bold"
				}
			},
			{
				"scope": "heading.2.markdown punctuation.definition.heading.markdown", // H2 delimiter (##)
				"settings": {
					"foreground": "#61FFCA"
				}
			},
			{
				"scope": "heading.3.markdown entity.name.section.markdown", // H3 text
				"settings": {
					"foreground": "#FFCA85",
					"fontStyle": "bold"
				}
			},
			{
				"scope": "heading.3.markdown punctuation.definition.heading.markdown", // H3 delimiter (#)
				"settings": {
					"foreground": "#FFCA85"
				}
			},
			{
				"scope": "heading.4.markdown entity.name.section.markdown", // H4 text
				"settings": {
					"foreground": "#FF6767",
					"fontStyle": "bold"
				}
			},
			{
				"scope": "heading.4.markdown punctuation.definition.heading.markdown", // H4 delimiter
				"settings": {
					"foreground": "#FF6767"
				}
			},
			{
				"scope": "heading.5.markdown entity.name.section.markdown", // H5 text
				"settings": {
					"foreground": "#F694FF",
					"fontStyle": "bold"
				}
			},
			{
				"scope": "heading.5.markdown punctuation.definition.heading.markdown", // H5 delimiter
				"settings": {
					"foreground": "#F694FF"
				}
			},
			{
				"scope": "heading.6.markdown entity.name.section.markdown", // H6 text
				"settings": {
					"foreground": "#EDECEE",
					"fontStyle": "bold"
				}
			},
			{
				"scope": "heading.6.markdown punctuation.definition.heading.markdown", // H6 delimiter
				"settings": {
					"foreground": "#EDECEE"
				}
			}
		]
	},
	// explorer
	"explorer.compactFolders": false,
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.confirmPasteNative": false,
	// cursor
	"editor.cursorBlinking": "solid",
	"editor.cursorStyle": "block",
	"editor.cursorSurroundingLines": 10,
	// behaviour
	"editor.autoClosingBrackets": "never",
	"editor.folding": false,
	"editor.formatOnSave": true,
	"editor.roundedSelection": false,
	"editor.stickyScroll.enabled": false,
	"editor.tabSize": 4,
	"editor.wordWrap": "on",
	// suggestions
	"editor.acceptSuggestionOnEnter": "on",
	"editor.insertSpaces": false,
	"editor.quickSuggestions": {
		"comments": false,
		"other": true,
		"strings": false
	},
	"editor.wordBasedSuggestions": "off",
	"editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
	// vim
	"vim.cursorStylePerMode.insert": "block",
	"vim.cursorStylePerMode.normal": "block",
	"vim.handleKeys": {
		"<C-a>": false,
		"<C-e>": false,
		"<C-b>": false,
		"<C-f>": false,
		"<C-n>": false
	},
	"vim.normalModeKeyBindings": [
		{
			"before": [
				"s",
				"r"
			],
			"after": [
				"c",
				"s"
			]
		}
	],
	"vim.surround": true,
	"vim.useCtrlKeys": true,
	"vim.useSystemClipboard": true,
	// additional
	"editor.accessibilitySupport": "off",
	"extensions.ignoreRecommendations": true,
	"security.workspace.trust.untrustedFiles": "open",
	"telemetry.telemetryLevel": "off",
	"security.allowedUNCHosts": [
		"wsl.localhost"
	],
	"window.title": "${dirty}${rootName}${separator}${activeEditorShort}${separator}${profileName}${separator}${appName}",
	"workbench.startupEditor": "none",
	"workbench.editor.empty.hint": "hidden",
	"files.exclude": {
		"**/.tmp.driveupload": true,
		"**/.tmp.drivedownload": true
	},
	"discord.removeDetails": true,
	"discord.removeLowerDetails": true,
}
