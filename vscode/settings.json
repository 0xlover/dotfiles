{
	"workbench.colorTheme": "GitHub Dark Default",
	"editor.fontFamily": "CommitMono",
	"editor.fontWeight": "bold",
	"editor.fontSize": 14,
	"editor.fontLigatures": false,
	"editor.lineNumbers": "on",
	"editor.minimap.enabled": false,
	"editor.renderLineHighlight": "none",
	"editor.guides.indentation": true,
	"window.menuBarVisibility": "visible",
	"window.closeWhenEmpty": true,
	"workbench.activityBar.location": "hidden",
	"workbench.enableExperiments": false,
	"editor.glyphMargin": false,
	"chat.commandCenter.enabled": false,
	// explorer
	"explorer.compactFolders": false,
	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.confirmPasteNative": false,
	// cursor
	"editor.cursorBlinking": "solid",
	"editor.cursorStyle": "block",
	"editor.cursorSurroundingLines": 10,
	// behaviour
	"editor.autoClosingBrackets": "never",
	"editor.folding": false,
	"editor.formatOnSave": true,
	"editor.roundedSelection": false,
	"editor.stickyScroll.enabled": false,
	"editor.tabSize": 4,
	"editor.wordWrap": "on",
	// suggestions
	"editor.acceptSuggestionOnEnter": "on",
	"editor.insertSpaces": false,
	"editor.quickSuggestions": {
		"comments": false,
		"other": true,
		"strings": false
	},
	"editor.wordBasedSuggestions": "off",
	"editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
	// vim
	"vim.cursorStylePerMode.insert": "block",
	"vim.cursorStylePerMode.normal": "block",
	"vim.handleKeys": {
		"<C-a>": false,
		"<C-e>": false,
		"<C-b>": false,
		"<C-f>": false,
		"<C-n>": false
	},
	"vim.normalModeKeyBindings": [
		{
			"before": [
				"s",
				"r"
			],
			"after": [
				"c",
				"s"
			]
		}
	],
	"vim.surround": true,
	"vim.useCtrlKeys": true,
	"vim.useSystemClipboard": true,
	// additional
	"editor.accessibilitySupport": "off",
	"extensions.ignoreRecommendations": true,
	"security.workspace.trust.untrustedFiles": "open",
	"telemetry.telemetryLevel": "off",
	"security.allowedUNCHosts": [
		"wsl.localhost"
	],
	"window.title": "${dirty}${rootName}${separator}${activeEditorShort}${separator}${profileName}${separator}${appName}",
	"workbench.startupEditor": "none",
	"workbench.editor.empty.hint": "hidden",
	"files.exclude": {
		"**/.tmp.driveupload": true,
		"**/.tmp.drivedownload": true
	},
	"go.toolsManagement.autoUpdate": true,
	"[html]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[css]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[javascript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
}